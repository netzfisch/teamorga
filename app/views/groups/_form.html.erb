<%= form_for(@group, :html => { :class => 'form-horizontal' }) do |f| %>
  <%= render "shared/error_message", object: f.object %>
  <div class="form-group">
    <%= f.label :name, class: 'col-sm-2 control-label' %>
    <div class="col-sm-6">
      <%= f.text_field :name, class: 'form-control', rows: '4', placeholder: 'Your Group name!' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :logo_url, class: 'col-sm-2 control-label' %>
    <div class="col-sm-6">
      <%= f.text_field :logo_url, class: 'form-control', rows: '4' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label "#{:public_information} *", class: 'col-sm-2 control-label' %>
    <div class="col-sm-6">
      <%= f.text_area :public_information, class: 'form-control', rows: '4' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label "#{:private_information} *", class: 'col-sm-2 control-label' %>
    <div class="col-sm-6">
      <%= f.text_area :private_information, class: 'form-control', rows: '4' %>
      <%= render "shared/markdown_tip" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-6">
      <%= f.submit nil, class: "btn btn-success btn-sm" %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
        group_path(@group), :class => 'btn btn-default btn-sm' %>
    </div>
  </div>
<% end %>
