<div class="panel panel-default">
  <div class="panel-heading">
    <h3>Log in</h3>
  </div>
  <div class="panel-body">
    <%= form_tag sessions_path do %>
      <div class="form-group">
        <%= label_tag :email %>
        <%= text_field_tag :email, params[:email], class: "form-control", :placeholder => "Email" %>
      </div>
      <div class="form-group">
        <%= label_tag :password %>
        <%= password_field_tag :password, params[:password], class: "form-control", :placeholder => "Passwort" %>
      </div>
      <div class="form-group">
        <%= submit_tag "Log in", :class => 'btn btn-success btn-block' %>
      </div>
      <div class="help-block">
        Noch keinen Account, dann neu <strong><%= link_to("Anmelden", signup_path) %></strong> !
      </div>
    <% end %>
  </div>
</div>
