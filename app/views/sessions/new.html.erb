<div class="page-header">
  <h3>Log in</h3>
</div>

<%= form_tag sessions_path, :html => { :class => 'form-horizontal' } do %>
  <p>Hier <%= link_to("registrieren", signup_path) %> sofern noch keine Accountdaten vorhanden!</p>
  <div class="field">
    <%= label_tag :email %><br />
    <%= text_field_tag :email, params[:email] %>
  </div>
  <div class="field">
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </div>
  <div class="actions">
    <%= submit_tag "Log in" %>
  </div>
<% end %>
