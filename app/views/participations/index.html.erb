<h1>Listing recurrences</h1>

<table>
  <tr>
    <th>Kategorie</th>
    <th>Datum</th>
    <th>Uhrzeit</th>
    <th>Anzahl</th>
    <th>Spieler</td>
    <th>Ort</th>
    <th>Bemerkung</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <% @participations.each do |participation| %>
    <tr>
      <td><%= link_to participation.recurrence.event.category, participation.recurrence.event %></td>    
      <td><%= link_to participation.recurrence.scheduled_to.strftime("%a. %d.%b.%Y"), participation.recurrence %></td>
      <td><%= participation.recurrence.event.base_time.strftime("%H:%M Uhr") %></td>
      <td><%= participation.recurrence.users.count %></td>  
      <td>    
        <% participation.recurrence.users.each do |user| %>
          <%= user.name %> 
        <% end %>
      </td>  
      <td><%= participation.recurrence.event.place %></td>
      <td><%= participation.recurrence.event.remark %></td>
      <td><--%= link_to 'Show', recurrence %></td>
      <td><--%= link_to 'Edit', edit_recurrence_path(recurrence) %></td>
      <td><--%= link_to 'Destroy', recurrence, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

