<h3>Teilnahmen</h3>

<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= @user.name %>


  <div class="checkbox">  
    <%= f.label :Teilnahme %><br />  
    <% for recurrence in Recurrence.find(:all) %>  
      <div>
        <%= check_box_tag "user[recurrence_ids][]", recurrence.id, @user.recurrences.include?(recurrence) %>
        <%= recurrence.scheduled_to.strftime("%d.%b.%Y") %> 
        <%= recurrence.event.category %>
      </div>
    <% end %>
  </div> 

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
