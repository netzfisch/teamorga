<div class="page-header">
  <h3>Teilnahmen <%= @user.name %></h3>
</div>

<%= form_for @user, :html => { :class => 'form-horizontal' } do |f| %>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :scheduled_to, :class => 'control-label' %>
    <div class="controls">
      <% for recurrence in Recurrence.find(:all, :order => :scheduled_to) %>  
        <div>
          <label class="checkbox">       
          <%= check_box_tag "user[recurrence_ids][]", recurrence.id, @user.recurrences.include?(recurrence) %>       
          <%= recurrence.scheduled_to.strftime("%d.%b.%Y") %> - <%= recurrence.event.category %>
          </label> 
        </div>
      <% end %>      
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit :class => 'btn btn-primary' %>
    <%= link_to 'Cancel', recurrences_path, :class => 'btn' %>
  </div>

<% end %>
