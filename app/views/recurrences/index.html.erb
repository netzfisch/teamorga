<h3>Termine</h3>
 
<table class="table table-striped">
  <thead>
    <tr>
      <th>Datum</th>
      <th>Zeit</th>
      <th>Art</th>
      <th>#</th>
      <% for user in User.find(:all) %>
        <th>      
          <span class="vertical">
            <%= link_to_if current_user.name == user.name, user.name, edit_participation_path(user) %>
          </span>
        </th> 
      <% end %>
      <th>Ort</th>
      <th>Bemerkung</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @recurrences.each do |recurrence| %>
      <tr>
        <td><%= link_to recurrence.scheduled_to.strftime("%d.%m."), recurrence %></td>
        <td><%= recurrence.event.base_time.strftime("%H:%M") %></td>
        <td><%= recurrence.event.category %></td>    
        <td><%= recurrence.users.count %></td>   
        <% for user in User.find(:all) %>
          <td>
            <%= check_box_tag "recurrence[user_id][]", user.id, recurrence.users.include?(user), :disabled => true %>
          </td>
        <% end %>
        <td><%= link_to recurrence.event.place,
    ("http://maps.google.de/maps?f=q&hl=de&q="+recurrence.event.place), :target => "_blank" %></td>
        <td><%= recurrence.event.remark %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="form-actions">
  <%= link_to('Alle', events_path, :class => 'btn') %>
  <%= link_to('Neu', new_event_path, :class => 'btn btn-primary') %>
</div>
