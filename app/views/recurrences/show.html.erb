<div class="well">
  <h3>
    <%= @recurrence.event.category %>,
    <%= @recurrence.event.remark %>
    <small>
      <% if @recurrence.event.category =~ /(.*)Spieltag(.*)/i %>
        <%= link_to 'Ergebniseingabe', 'http://hvbv.de/neue_HP/index.php?id=296', :target => "_blank" %>
      <% end %>
    </small>
  </h3>

  <p class="lead">
    <%= @recurrence.scheduled_to.strftime("%e. %B %Y") %>, 
    <%= @recurrence.event.base_time.strftime("%H:%M") %> Uhr, 
    <small>
      <%= link_to 'Ort & Anfahrt', '#place' %>
    </small>
  </p>
</div>

<div class="well">
  <dl class="dl-horizontal" >
    <dt><i class="icon-user"></i> Zusage(n): <%= @accepter.size %></dt>
    <dd>
      <%= render partial: "participations/participation", collection: @accepter, spacer_template: "participations/divider" %>
      ... <%= email_link(@accepter, @recurrence) %> !
    </dd>

    <dt><i class="icon-user"></i> Absage(n): <%= @refuser.size %></dt>
    <dd>
      <%= render partial: "participations/participation", collection: @refuser, spacer_template: "participations/divider" %>
      ... <%= email_link(@refuser, @recurrence) %> !
    </dd>

    <dt></dt>
    <dd><%= render "participations/button" %></dd>

    <dt>Hinzuf√ºgen:</dt>
    <dd><%= render "comments/form" %></dd>

  </dl>

  <p class="text-warning" align="middle">Reminder an die "Schweiger" senden <%= email_link(@no_replyer, @recurrence) %> !</p>
</div>

<div class="well">
  <p id="place"><strong>Ort: </strong><%= @recurrence.event.place %></p>

  <%= link_to image_tag("http://maps.google.com/maps/api/staticmap?center="+@recurrence.event.place+"&zoom=15&size=460x300&markers=color:green%7Clabel:S%7C"+@recurrence.event.place+"&maptype=roadmap&sensor=true",
                        class: "img-polaroid"),
                        "http://maps.google.de/maps?f=q&hl=de&q="+@recurrence.event.place,
                        target: "_blank" %>

  <p>
    Anfahrt via 
    <%= link_to 'Google Maps',
    ("http://maps.google.de/maps?f=q&hl=de&q="+@recurrence.event.place), :target => "_blank" %>
    oder <%= link_to 'Open Street Map',
    ("http://nominatim.openstreetmap.org/search?q="+@recurrence.event.place), :target => "_blank" %>
  </p>
</div>

