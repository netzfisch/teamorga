<%= form_for([:backoffice, @group], :html => { :class => 'form-horizontal' }) do |f| %>

  <% if @group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@group.errors.count, "error") %> prohibited this backoffice_group from being saved:</h2>
      <ul>
      <% @roup.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, placeholder: 'Your Group name - max. 10 characters' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :logo_url, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :logo_url %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "public information*", class: 'control-label' %>
    <div class="controls">
      <%= f.text_area :public_information, class: 'span5', rows: '4' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "private_information*", class: 'control-label' %>
    <div class="controls">
      <%= f.text_area :private_information, class: 'span5', rows: '4' %>
      <%= render :partial => 'layouts/markdown_tip' %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit :class => 'btn btn-primary' %>
    <%= link_to 'Cancel', backoffice_groups_path, class: 'btn' %>
  </div>
<% end %>
