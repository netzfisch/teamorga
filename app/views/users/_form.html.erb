<%= form_for @user, :html => { :class => 'form-horizontal' } do |f| %>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :email, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :phone, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :phone, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :birthday, :class => 'control-label' %>
    <div class="span1">
      <%= f.date_select :birthday, :class => 'date_select', :start_year => 1950 %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :shirt_number, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :shirt_number, :class => 'number_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :scheduled_to, :class => 'control-label' %>
    <div class="controls"> 
      <% @recurrences.each do |recurrence| %>
        <div>
          <label class="checkbox">       
          <%= check_box_tag "user[recurrence_ids][]", recurrence.id, @user.recurrences.include?(recurrence) %>       
          <%= recurrence.scheduled_to.strftime("%d.%b.%Y") %> - <%= recurrence.event.category %>
          </label> 
        </div>
      <% end %>      
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit :class => 'btn btn-primary' %>
    <%= link_to 'Cancel', users_path, :class => 'btn' %>
  </div>
<% end %>
