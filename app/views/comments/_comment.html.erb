<li class="list-group-item">
  <%= link_to comment.user.name, user_path(comment.user) %>
  <% if comment.recurrence_id != nil %>
      - 
    <%= link_to(:controller => :recurrences, :action => 'show', :id => comment.recurrence) do %>
      <%= comment.recurrence.event.category %> am 
      <%= comment.recurrence.scheduled_to.strftime("%d.%m.") %>
    <% end %>
  <% end %>
  <br />
  <%= markdown_parser comment.body %>
  <span class="timestamp">
    Posted <%= time_ago_in_words(comment.created_at) %> ago.
  </span>
  <% if current_user == comment.user %>
    <%= link_to "Delete", comment_path(comment), method: :delete, confirm: "Are you sure?", title: comment.body %>?
  <% end %>
</li>
