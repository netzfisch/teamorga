<div class="panel panel-default">
  <div class="panel-heading">
    <h3><%=t :event %></h3>
  </div>
  <div class="panel-body">
    <dl class="dl-horizontal">
      <dt><strong>Kategorie:</strong></dt>
      <dd><%= @event.category %></dd>
      <dt><strong>Datum:</strong></dt>
      <dd>
        <ul class="list-unstyled">
          <% @event.recurrences.each do |recurrence| %>
            <li>
              <%= recurrence.scheduled_to.strftime("%a. %d. %b. %Y") %>  
              <% if @event.recurrences.count > 1 %>
                <%= link_to "Delete", recurrence_path(recurrence), :confirm => "Are you sure?", :method => :delete %>?
              <% end %>
            </li>
          <% end %>
        </ul>
      </dd>
      <dt><strong>Zeit:</strong></dt>
      <dd><%= @event.base_time.strftime("%H:%M Uhr") %></dd>
      <dt><strong>Ort:</strong></dt>
      <dd><%= @event.place %></dd>
      <dt><strong>Bemerkung:</strong></dt>
      <dd><%= @event.remark %></dd>
      <dt></dt>
      <dd>
        <%= link_to t('.back', :default => t("helpers.links.back")),
            events_path, :class => 'btn btn-default btn-sm'  %>
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
            edit_event_path(@event), :class => 'btn btn-primary btn-sm' %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
            event_path(@event), :class => 'btn btn-danger btn-sm',
            :method => 'delete', :data => { :confirm => t('.confirm',
            :default => t("helpers.links.confirm", :default => 'Are you sure?')) } %>
      </dd>
    </dl>
  </div>
</div>
