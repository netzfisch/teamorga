<div class="panel panel-default">
  <div class="panel-heading">
    <h3><%=t :event %></h3>
  </div>
  <div class="panel-body">

<dl class="dl-horizontal">
  <dt><strong>Kategorie:</strong></dt>
  <dd><%= @event.category %></dd>
  <dt><strong>Datum:</strong></dt>
  <dd>
    <ul>
      <% @event.recurrences.each do |recurrence| %>
        <li><%= link_to recurrence.scheduled_to.strftime("%a. %d. %b. %Y"), event_recurrence_path(@event, recurrence) %></li>
      <% end %>
    </ul>
  </dd>
  <dt><strong>Zeit:</strong></dt>
  <dd><%= @event.base_time.strftime("%H:%M Uhr") %></dd>
  <dt><strong>Ort:</strong></dt>
  <dd><%= @event.place %></dd>
  <dt><strong>Bemerkung:</strong></dt>
  <dd><%= @event.remark %></dd>

  <dd class="col-sm-offset-2 col-sm-6 ">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              events_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_event_path(@event), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              event_path(@event),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %></dd>
</dl>
</div>
</div>
</div>

