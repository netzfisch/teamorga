<%- model_class = Event -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:category) %></th>
      <th><%= model_class.human_attribute_name(:base_date) %></th>
      <th><%= model_class.human_attribute_name(:base_time) %></th>
      <th><%= model_class.human_attribute_name(:recurrences) %></th>
      <th><%= model_class.human_attribute_name(:place) %></th>
      <th><%= model_class.human_attribute_name(:remark) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= link_to event.category, event_path(event) %></td>
        <td><%= event.base_date.strftime("%a. %d.%b.%Y") %></td>
        <td><%= event.base_time.strftime("%H:%M Uhr") %></td>
        <td>
          <% event.recurrences.each do |recurrence| %>
            <%= link_to recurrence.scheduled_to.strftime("%a. %d. %b. %Y"), 
                event_recurrence_path(event, recurrence) %>
          <% end %>        
        </td>
        <td><%= event.place %></td>
        <td><%= event.remark %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_event_path(event), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      event_path(event),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="form-actions">
  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_event_path,
              :class => 'btn btn-primary' %>
</div>            
