<%= form_for @event, :html => { :class => 'form-horizontal' } do |f| %>

  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>
      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :category, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :category, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :base_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :base_date, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :base_time, :class => 'control-label' %>
    <div class="controls">
      <%= f.time_select :base_time, :class => 'time_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :end_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :end_date, :class => 'date_select' %>
      <span class="help-block">Wird ein End-Datum größer als das Start-Datum angegeben, so werden in dem Zeitraum alle 7 Tage "Wiederholungen" erzeugt (z.B. für Beachen, Training, etc.)!</span>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :place, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :place, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "remark*", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :remark, :class => 'text_area', :rows => "3" %>
      <%= render :partial => 'layouts/markdown_tip' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                events_path, :class => 'btn' %>
  </div>
<% end %>

