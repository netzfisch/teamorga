<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="title">Backoffice</h3>
  </div>
  <div class="panel-body">
    <div class="panel-title">Manage:</div>
  </div>
  <ul class="list-group">
    <li class="list-group-item">
    <%= link_to(group_path(Group.first)) do  %>
      <i class="glyphicon glyphicon-list"></i> Groupdata
    <% end %>
    </li>
    <li class="list-group-item">
    <%= link_to (users_path) do %>
      <i class="glyphicon glyphicon-user"></i> Users
    <% end %>
    </li>
    <li class="list-group-item">
    <%= link_to (events_path) do %>
      <i class="glyphicon glyphicon-check"></i> Events
    <% end %>
    <%= link_to t('.new', :default => t("helpers.links.new")), new_event_path, 
      :class => 'btn btn-xs btn-success pull-right' %>
    </li>
    <li class="list-group-item">
    <%= link_to(comments_path) do %>
      <i class="glyphicon glyphicon-comment"></i> Comments
    <% end %>
    </li>
  </ul>
</div>
